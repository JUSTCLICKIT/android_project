<!-- activity_queue_operation.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input field for queue operations -->
    <EditText
        android:id="@+id/editTextElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Element" />

    <!-- Button to enqueue an element into the queue -->
    <Button
        android:id="@+id/btnEnqueue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enqueue Element" />

    <!-- Button to dequeue an element from the queue -->
    <Button
        android:id="@+id/btnDequeue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dequeue Element" />

    <!-- Button to peek the front element of the queue -->
    <Button
        android:id="@+id/btnPeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peek Front Element" />

    <!-- Button to check if the queue is empty -->
    <Button
        android:id="@+id/btnIsEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check if Queue is Empty" />

</LinearLayout>

<!-- activity_stack_operation.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input field for inserting an element into the stack -->
    <EditText
        android:id="@+id/editTextElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Element to Insert" />

    <!-- Button to insert an element into the stack -->
    <Button
        android:id="@+id/btnInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Element" />

    <!-- Button to show the stack -->
    <Button
        android:id="@+id/btnShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Stack" />

    <!-- Button to update an element in the stack -->
    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Element" />

    <!-- Button to delete an element from the stack -->
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Element" />

</LinearLayout>
